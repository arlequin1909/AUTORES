@model DatosMaestros.Models.forgotYourPassword
@{
    ViewBag.Title = "forgotYourPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action="@Url.Action("recoverPassword")" class="login-form" method="post">
    <div class="text-center">
        <img src="~/Content/images/abacus.png" alt="" width="90%" />
    </div>
    <div class="card mb-0">
        <div class="card-body">
            <div class="text-center mb-3">
                <h5 class="mb-0">RESTABLECER CONTRASEÑA</h5>
                <span class="d-block text-muted">
                    Le enviaremos un enlace para restablecer su contraseña
                </span>
            </div>
            <div class="form-group form-group-feedback form-group-feedback-left">
                <input type="text" class="form-control" placeholder="Email" name="email" required>
                <div class="form-control-feedback">
                    <i class="icon-user text-muted"></i>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" style=" background-color:#0245ba;border-color:#0245ba">Restablecer Contraseña<i class="icon-circle-right2 ml-2"></i></button>
            </div>
        </div>
    </div>
    <br />
    <div class="simple-footer text-center">
        © @DateTime.Now.ToString("yyyy") MetNet - Todos Los Derechos Reservados.
    </div>
</form>
@section scripts{
    @if (Session["message"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                type: '@Session["type"]',
                html: "@Session["message"]",
                title: "@Session["title"]",
                ShowConfirmButton: true,
                confirmButtonColor: '#002d73',
                cancelButtonColor: '#23272b',
            });
        </script>
        Session.Remove("type");
        Session.Remove("message");
        Session.Remove("title");
    }
    <script>
    </script>
}


